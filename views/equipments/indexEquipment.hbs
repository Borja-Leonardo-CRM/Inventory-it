<div style="text-align: center; flex-direction:row">
  <p>
    <form id="form" action="/equipments" method="GET">
      <div class="input-group">
        <input type="text" name="search" placeholder="Search equipments..." class="form-control">
        <input type="submit" value="search" class="btn btn-info" style="width: 60px; margin-left:5px">
      </div>
    </form>
  </p>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th>REF.</th>
      <th>NAME</th>
      <th>MODEL</th>
      <th>STOCK</th>
      <th>URL</th>
      <th>Edit</th>
    </tr>
  </thead>
  <tbody>
    {{#each equipments}}
    <tr>
      <td>{{reference}}</td>
      <td>{{ name}}</td>
      <td>{{ model}}</td>
      <td>{{ stock}}</td>
      <td>{{ url}}</td>
      <td><a href="/equipments/{{_id}}" class="edit-btt"> E </a><a href="/equipments/{{_id}}/remove" class="remove-btt">
          X
        </a></td>
    </tr>
    {{/each}}
  </tbody>
</table>
<a href="/equipments/add" class="add_new">
  <div>
    Add new
  </div>
</a>