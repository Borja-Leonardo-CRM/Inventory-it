<div class="container">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>REF.</th>
                <th>NAME</th>
                <th>MODEL</th>
                <th>STOCK</th>
                <th>URL</th>
            </tr>
        </thead>
        <tbody>
            {{#each equipments}}
            <tr>
                <td>{{reference}}</td>
                <td>{{ name}}</td>
                <td>{{ model}}</td>
                <td>{{ stock}}</td>
                <td>{{ url}}</td>
                <td><a href="/equipments/{{_id}}"> E </a><a href="/equipments/{{_id}}/remove"> X </a></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <a href="/equipments/add">
        <div style="background-color: green; color: white; padding: 2%; text-align: center"><b>ADD EQUIPMENT</b>
        </div>
    </a>
</div>