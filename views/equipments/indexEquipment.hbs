<div style="text-align: center; flex-direction:row">
  <p>
    <form id="form" action="/equipments" method="GET">
      <div class="input-group">
        <input type="text" name="search" placeholder="Search equipments..." class="form-control">
        <input type="submit" value="search" class="btn btn-info" style="width: 60px; margin-left:5px">
      </div>
    </form>
  </p>
</div>
<div class="tableFixHead">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>REF.</th>
        <th>NAME</th>
        <th>MODEL</th>
        <th>STOCK</th>
        <th>URL</th>
      </tr>
    </thead>
    <tbody>
      {{#each equipments}}
      <tr>
        <td>{{reference}}</td>
        <td>{{ name}}</td>
        <td>{{ model}}</td>
        <td>{{ stock}}</td>
        <td>{{ url}}</td>
        <td><a href="/equipments/{{_id}}"> E </a><a href="/equipments/{{_id}}/remove"> X </a></td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>
<div class="add_new">
  <a href="/equipments/add" class="btn btn-info">Add new</a>
</div>